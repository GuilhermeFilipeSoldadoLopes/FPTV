@{
	ViewData["Title"] = "Results";
}
<!DOCTYPE html>

<head>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<html>
	<style>
		.central {
			width: 100%;
			margin: 0 auto;
			text-align: center;
			height:100%;
			
		}

		.center {
			display: flex;
			justify-content: center;
			align-items: center;
		}

		h1 {
			font-size: 36px;
			margin-bottom: 30px;
		}
		.buttons {
			display: flex;
			justify-content: center;
			margin-bottom: 30px;
		}
		.button {
			
			margin-left:10px;
			background-color: #e0eeff;
			color: black;
			border: none;
			border-radius: 5px;
			cursor: pointer;
			transition: all 0.2s ease-in-out;
			border: 1px solid black;
		}

		.button2 {
			background-color: #e0eeff;
			color: black;
			width:100%;
			padding: 10px 20px;
			
		
		}
		.button:hover {
			background-color: #2980b9;
		}
		.my-div {
			width:100%;
			display: flex;
			flex-direction: row;
			height: 50px;
			margin: 10px;
		}
		.my-div > div {
			flex-basis: 25%;
			flex-grow: 1;
			
		}
		.btn123{
			color:black;
			width: 90%;
			display: flex;
			flex-direction: row;
			border-bottom: 1px solid black;
			border-radius: 15px;
		}
		span{
			font-weight:bold;
		}

		.span2 {
			font-weight: normal;
		}
		.dropdown {
			margin-left:10px;
			background-color: #e0eeff;
			color: #fff;
			border: none;
			border-radius: 5px;
			cursor: pointer;
			transition: all 0.2s ease-in-out;
			border: 1px solid black;
		}

		.dropdown-content {
			display: none;
			position: absolute;
			z-index: 1;
			margin-left:5%;
			margin-top: 2px;
			
		}

		.dropdown:hover .dropdown-content {
			display: block;
		}

		.dropdown-content a {
			background-color:white;
			display: block;
			color: #000;
			padding: 10px;
			text-decoration: none;
			border: 1px solid black;
		}

		.dropdown-content a:hover {
			background-color: #bf7b8e;
		}

		.search-container {
			display: flex;
			align-items: center;
		}

		.search-container input[type="text"] {
			background-color: #e0eeff;
			color: black;
			width:100%;
			padding: 10px 20px;
			border:1px solid black;
			
		}

		.search-container img {
			margin-right: 10px;
			height: 30px;
			width: 30px;
		}

		input::placeholder {
			color: black;
			font-size: 80%;
		}

</style>

<script>
	function selected(element) {
		var elements = document.getElementsByClassName("btnYau");
		for (var i = 0; i < elements.length; i++) {
			elements[i].classList.remove('selectedbtn');
		}
		element.classList.add('selectedbtn');
    }
</script>

<body class="bodytemp whiteText">
	
	<div class="central">

		<div style="display:flex; margin-bottom:3%">
			
				@if (ViewBag.days == 1) {
				<button class="btnResult selectedbtn bordercolor whiteText" style="">
					<a class="whiteText" style="text-decoration: none; text-transform: capitalize;" href="@Url.Action("Results", "Matches", new { days = 1, game = ViewData["game"].ToString()})" id="toTranslate">Results of  Yesterday</a>
				</button>
				} else {
				<button class="btnResult bordercolor whiteText" style="">
					<a class="whiteText" style="text-decoration: none; text-transform: capitalize;" href="@Url.Action("Results", "Matches", new { days = 1, game = ViewData["game"].ToString()})" id="toTranslate">Results of  Yesterday</a>
				</button>
				}
			
				@if (ViewBag.days == 0) {
				<button class="btnResult selectedbtn bordercolor whiteText" style="">
					<a class="whiteText" style="text-decoration: none; " href="@Url.Action("Results", "Matches", new { game = ViewData["game"].ToString()})" id="toTranslate">Results of Today</a>
				</button>
				} else {
				<button class="btnResult bordercolor whiteText" style="">
					<a class="whiteText" style="text-decoration: none;" href="@Url.Action("Results", "Matches", new { game = ViewData["game"].ToString()})" id="toTranslate">Results of Today</a>
				</button>
				}

			<button class="btnResult bordercolor">
				<form method="post" action="@Url.Action("Results", "Matches", new {game = ViewData["game"].ToString()})">
					<input class="bordercolor dark" type="text" name="days" placeholder=" 2 to 365 days ago" required style="width:50%; padding:1px; text-align:center">
				</form>
			</button>
		</div>

		<div class="center bordercolor colorformatch " style="width:100%; padding:1%">
			<table class=" bordercolor" style="width:100%; border-radius:15px;overflow-x:auto;">
				@{ 
					var team1Score = 0;
					var team2Score = 0;
				}
				@foreach (var item in ViewBag.matches)
				{
					<tr style="border:1px solid black; cursor:pointer;width:100%;overflow-x:auto;" onclick="location.href = '@Url.Action("MatchDetails", "Matches", new {id = item.MatchesAPIID, type = item.TimeType.ToString().ToLower(), game = ViewData["game"].ToString()})'">
						<td>@item.TeamsList[0].Name</td>
						<td>
							<img src=@item.TeamsList[0].Image style="width:40px; margin:auto; height:40px;" />
						</td>
						<td>
							@foreach (var team in item.Scores)
							{
								@if (item.TeamsList[0].Name == team.TeamName)
								{
									team1Score = team.TeamScore;
								}
							}
							
							@foreach (var team in item.Scores)
							{
								@if (item.TeamsList[1].Name == team.TeamName)
								{
									team2Score = team.TeamScore;
								}
							}

							@if (team1Score < team2Score) {
								<span>
									<span style="color: #B71919; font-size: 120%">@team1Score</span>
									<span class="span2"> - </span>
									<span style="color: #11871D; font-size: 120%">@team2Score</span>
								</span>
							} else if (team1Score > team2Score){
								<span>
									<span style="color: #11871D; font-size: 120%">@team1Score</span>
									<span class="span2"> - </span>
									<span style="color: #B71919; font-size: 120%">@team2Score</span>
								</span>
							} else if(team1Score == team2Score){
								<span>
									<span style="color: #CD8417; font-size: 120%">@team1Score</span>
									<span class="span2"> - </span>
									<span style="color: #CD8417; font-size: 120%">@team2Score</span>
								</span>
							}
						</td>
						<td>
							<img src=@item.TeamsList[1].Image style="width:40px; margin:auto; height:40px;" />
						</td>
						<td> @item.TeamsList[1].Name </td>
						<td> @item.EventName</td>
						<td>
							<img src=@item.Event.EventImage style="width:40px; margin:auto; height:40px;" />
						</td>
					</tr>
				}
			</table>
			</div>
		</div>
	
</body>
</html>

