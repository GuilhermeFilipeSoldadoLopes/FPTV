@{
    ViewData["Title"] = "TeamStats";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 2px solid black;
        padding: 8px;
        text-align: left;
    }

    .logo {
        max-width: 100%;
        height: auto;
    }

    .logo2 {
        max-width: 100%;
        height: auto;
        margin: auto;
        padding: 20px;
    }

    .h3 {
        padding-left: 20px;
        text-align: center;
    }
</style>
<body class="bodytemp" style="align-content:center; justify-content:center" >

    <div style="display: flex; flex-direction: column; text-align:center">

        <div style="padding-top:3%; width:50%;margin:auto" class=" darkcolor bordercolor">
            <div style="display: flex ; justify-content:center;width:100%;margin:auto">
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo" style="width:20%;margin:auto">
                <h1 style="margin-top: 20px; text-align:center; margin:auto">We Are Us Gaming</h1>
            </div>

            <div style="display: flex; width:100%;margin-bottom:0px; margin-top:3%;">
                <div style=";width:50%">
                    <button class="btnTeam" style="width: 100%; border-radius:15px;padding:0px; text-align:left; margin-left:5px">
                        <span style="">
                            Remove From Favorite <img src="~/images/mvp.png" style="width:6%;margin-left:1%;">
                        </span>
                    </button>
                </div>

                <div style="width:50%; text-align:right; margin-right:5px">
                    <span>
                        Jun, 2008 <img src="~/images/Flags/4x3/pt.svg" style="width:6%;margin-left:1%;">
                    </span>
                </div>

            </div>
        </div>

        <div class="center darkcolor bordercolor" style="margin:auto;margin-top:3%; font-size:25px;width:90%; margin-top:3%">

            <div  style="align-items: center">
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">Rui Plínio</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">Miguel Rebelo</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">João Afonso</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">Gui Lopes</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">os outros</h3>
            </div>
        </div>

        <div class="darkcolor bordercolor" style="padding: 3%; margin:auto; margin-top:3%; font-size:25px; width:90%; margin-bottom:10%">
            <table class="tablecolors">

                <tr>
                    <td style="width:40%">Couch</td>
                    <td>Peter</td>

                </tr>
                <tr>
                    <td style="width:40%">World Ranking</td>
                    <td>
                        <span> #12</span>
                        <span>

                            <img src="~/images/green.png" style="width:4%;padding:5px;">

                        </span>
                    </td>

                </tr>
                <tr>
                    <td style="width:40%">Total Wins</td>
                    <td>231</td>

                </tr>
                <tr>
                    <td style="width:40%">Total Loses</td>
                    <td>60</td>

                </tr>
                <tr>
                    <td style="width:40%">Maps Played</td>
                    <td>102</td>

                </tr>
            </table>
        </div>
    </div>
</body>

