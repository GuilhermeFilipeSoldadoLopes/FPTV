@using FPTV.Models.MatchesModels;
@using FPTV.Models.StatisticsModels;
@using Newtonsoft.Json.Linq
@using System.Linq
@using System.Globalization;
@using System.Collections.Generic;
@{
    ViewData["Title"] = "EventDetails";
    var dict = ViewBag.TeamList as Dictionary<int, string>;
}


<style>
    .box1 {
        width: 25%;
        height: 100%;
        display: flex;
        flex-flow: column wrap;
    }

    .box {
        width: 50%;
        height: 100%;
        display: flex;
        flex-flow: column wrap;
        margin-top: 60%;
    }

    .logo {
        max-width: 100%;
        height: auto;
    }

    table {
        border-collapse: collapse;
        width: 95%;
    }

    th {
        border: 1px solid black;
        padding: 10px;
    }

    td {
        border: 1px solid black;
        padding: 10px;
    }

    h3 {
        text-align: center;
    }

    .box2 {
        width: calc(95% / 2);
        height: 20%;
        display: inline-block;
    }

    caption {
        color: black;
        text-decoration: underline;
    }

    .alinhar {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .alinhar2 {
        display: inline-block;
        align-items: center;
        justify-content: center;
    }

    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .my-div {
        width: 100%;
        display: flex;
        flex-direction: row;
        height: 50px;
        margin: 10px;
    }

        .my-div > div {
            flex-basis: 25%;
            flex-grow: 1;
        }

    .my-div2 > div {
        width: 100%
    }

    span {
        font-weight: bold;
    }

    .span2 {
        font-weight: normal;
    }

    .central {
        text-align: center;
        background-color: white;
    }

    .ola {
        display: flex;
        align-self: flex-start;
    }
</style>
<body class="bodytemp">

    <h1 style="text-align: center;">@ViewBag.Event.EventName - @ViewBag.Event.LeagueName</h1>
    <div class="ola">

        <div class="box1" style="background-color:lightgrey">
            <h4 style="font-weight: bold;">Finished Matches</h4>
            @foreach(MatchesCS match in ViewBag.pastMatches)
            {
                <div class="alinhar" style="border-bottom: 1px solid black">
                <div class="my-div2" style="width:90%;">
                    <div>
                            <span class="span2" style="margin-top:10px;">@ViewBag.Event.BeginAt.ToString("D", CultureInfo.GetCultureInfo("en-US"))</span>
                    </div>

                    <div>
                        <span style="text-align: center;">
                            <p style="font-size:25px">
                                <span> @dict[match.Score.Keys.First()] </span>
                                <span class="span2"> @match.Score.Values.First() </span>
                                <span class="span2"> vs </span>
                                <span class="span2"> @match.Score.Values.Last() </span>
                                <span> @dict[match.Score.Keys.Last()] </span>
                            </p>
                        </span>
                    </div>

                    <div style="text-align:left; display: flex;">
                        <p>Best of @match.NumberOfGames</p>
                        <a href="#" style="justify-content: space-around; margin-left: auto;">More details</a>
                    </div>

                </div>
            </div>
            }
            

        </div>

        <div class="box" style="background-color: white; margin: 2%;">

            <div style="text-align:center; background-color:#e0eeff;">

                <div class="alinhar">
                    <div class="my-div">
                        <div>
                            <span>Date</span>
                            <p>@ViewBag.Event.BeginAt.ToString("D", CultureInfo.GetCultureInfo("en-US"))</p>
                        </div>

                        <div>
                            <span>Prize pool</span>
                            <p>@ViewBag.Event.PrizePool $</p>
                        </div>

                        <div>
                            <span>Teams</span>
                            <p>@ViewBag.Event.TeamsList.Count</p>
                        </div>

                        <div>
                            <span>Tier</span>
                            <p>@char.ToUpper(ViewBag.Event.Tier)</p>
                        </div>

                    </div>

                </div>
                <p style="margin-right:20%; text-align:right">
                    <span>Link: <a href="@ViewBag.Event.EventLink">@ViewBag.Event.EventName</a></span>
                </p>
            </div>

            @foreach (MatchesCS match in ViewBag.runningMatches)
            {
                <div class="alinhar">
                    <div class="my-div2" style="width:90%">
                        <div>
                            <p style="font-weight:bold; margin-top:2%; margin-bottom:0px; ">
                                <h4 style="font-weight: bold;">Live Match</h4>
                            </p>
                            <span class="span2" style="margin-top:10px;">@match.BeginAt.Value.ToString("D", CultureInfo.GetCultureInfo("en-US"))</span>
                        </div>

                        <div>
                            <span style="text-align: center;">
                                <p style="font-size:25px">
                                    <span> @dict[match.Score.Keys.First()] </span>
                                    <span class="span2"> match.Score.Values.First() </span>
                                    <span class="span2"> vs </span>
                                    <span class="span2"> match.Score.Values.Last() </span>
                                    <span>@dict[match.Score.Keys.Last()] </span>
                                </p>
                            </span>
                        </div>

                        <div style="text-align:left; display: flex;">
                            <p>Best of @match.NumberOfGames</p>
                            <a href="#" style="justify-content: space-around; margin-left: auto;">More details</a>
                        </div>

                    </div>
                </div>
            }
            



        </div>


        <div class="box1" style="background-color:lightgrey">
            <h4 style="font-weight: bold;">Upcoming Matches</h4>
            @foreach (MatchesCS match in ViewBag.upcomingMatches)
            {

                var team1 = match.Score.Keys.FirstOrDefault();
                var team2 = match.Score.Keys.LastOrDefault();
                
                if(team1 != 0 && team2 != 0)
                {
                    <div class="alinhar" style="border-bottom: 1px solid black">
                    <div class="my-div2" style="width:90%;">
                        <div>
                            <span class="span2" style="margin-top:10px;">@match.BeginAt.Value.ToString("D", CultureInfo.GetCultureInfo("en-US"))</span>
                        </div>

                        <div>
                            <span style="text-align: center;">
                                <p style="font-size:25px">
                                    <span> @dict[team1] </span>
                                    <span class="span2">  </span>
                                    <span class="span2"> vs </span>
                                    <span class="span2">  </span>
                                    <span> @dict[team2] </span>
                                </p>
                            </span>
                        </div>

                        <div style="text-align:left; display: flex;">
                                <p>Best of @match.NumberOfGames</p>
                            <a href="#" style="justify-content: space-around; margin-left: auto;">More details</a>
                        </div>

                    </div>
                </div>
                }
                
            }
            

        </div>
    </div>
</body>