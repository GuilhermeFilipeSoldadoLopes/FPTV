        align-items: center;
    }

    .my-div {
        width: 100%;
        display: flex;
        flex-direction: row;
        height: 50px;
        margin: 10px;
    }
    
    
    .my-div > div {
        flex-basis: 25%;
        flex-grow: 1;
    }

    .my-div2 > div {
        width: 100%
