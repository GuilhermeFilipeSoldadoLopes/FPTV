                <div style="padding-left:20px">
                    @if (ViewData["Topics"] == null || ((List<Topic>)ViewData["Topics"]).Count() == 0)
                    {
                        <span class="span2 text-dark">No Topics</span>
                        <br />
                    }
                    else
                    {
                        foreach (var item in (List<Topic>)ViewData["Topics"])
                        {
                            <span class="span2 text-dark">item.Title</span>
                            <br />
                        }
                    }
                </div>
            </div>
            <br />
        </div>
            
