<body class="bodyLogin">
    <div class="ola " style="border-radius:15px;margin-top:0px;padding-top:20px">
        <div class="box darkcolor bordercolor" style="border-radius:15px;margin-top:0px">
            <div style="width:100%;text-align:center;">
                <h1>CS:GO</h1>
            </div>
            <br />

            <div style="width:80%;display:block;margin-left:auto;margin-right:auto;border-style:solid;border-color:black;background-color:white;border-width:1px;border-radius:10px;padding:10px;">
                <h4 class="text-dark">Favourite Players:</h4>
                <div style="padding-left:20px">
                    @if (ViewData["FavPlayerListCSGO"] == null || ((List<FavPlayerList>)ViewData["FavPlayerListCSGO"]).Count() == 0)
                    {
                        <span class="span2 text-dark">No Favourite Players</span>
                        <br />
                    }
                    else
                    {
                        foreach (var item in (List<FavPlayerList>)ViewData["FavPlayerListCSGO"])
                        {
                            foreach (var player in item.Players)
                            {
                                <span class="span2 text-dark">item.Name</span>
                                <br />
                            }
                        }
                    }
                </div>
            </div>
            <br />

            <div style="width:80%;display:block;margin-left:auto;margin-right:auto;border-style:solid;border-color:black;background-color:white;border-width:1px;border-radius:10px;padding:10px;">
                <h4 class="text-dark">Favourite Teams:</h4>
                <div style="padding-left:20px">
                    @if (ViewData["FavTeamsListCSGO"] == null || ((List<FavTeamsList>)ViewData["FavTeamsListCSGO"]).Count() == 0)
