@{
    ViewData["Title"] = "New Topic +";
}
<!DOCTYPE html>

<head>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<html>
	<style>
		.central {
			width: 100%;
			margin: 0 auto;
			text-align: center;
			height:100%;
			background-color: white;
		}

		.center {
			display: flex;
			justify-content: center;
			align-items: center;
		}

		tr, td, th{
			border-width: 1px;
		}

		
	</style>

<body onload="chart()" class="bodytemp">
	<div class="box darkcolor bordercolor" style="width:60%; border-radius:15px;margin:auto; margin-top:0px ;text-align: center;">
		<h2 style="margin-top:3%;font-weight:bold"> @ViewData["Title"]</h2>

		<div style="width:100%;margin:auto;">

			<div style="width:100%">
				<textarea rows="1" cols="50" style="width:85%;margin:3%;margin-bottom:0px" placeholder="Title"></textarea>
			</div> <br />

			<div style="width:100%">
				<textarea rows="5" cols="50" style="width:85%;margin:3%;margin-top:0px;" placeholder="Description"></textarea>
			</div>


			<div  style="width:100%; display:flex; justify-content:center; margin:auto">

				<button class="btncancel bordercolor " type="submit" style="width:30%; margin:3%;color:black">Cancelar</button>

				<button class=" bordercolor " type="submit" style="width:30%;margin:3%;color:black">Confirmar</button>
				 
			</div>

		</div>
	</div>
	

</body>

</html>

