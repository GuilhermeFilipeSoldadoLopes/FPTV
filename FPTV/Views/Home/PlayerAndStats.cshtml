@{
    ViewData["Title"] = "PlayerAndStats";
}
<style>
    
    .box1 {
        width: 22%; 
        height: 100%;
        display: inline-block; 
    }

    .box {
        width: 50%; 
        height: 100%;
        display: inline-block; 
    }
    .logo {
        max-width: 100%; 
        height: auto; 
    }

    table {
        border-collapse: collapse; 
        width: 95%; 
    }

    th {
        border: 1px solid black; 
        padding: 10px; 
    }

    td {
        border: 1px solid black; 
        padding: 10px; 
    }

    h3 {
        text-align: center;
    }

    .box2 {
        width: calc(95% / 2);
        height: 20%;
        display: inline-block; 
    }

    caption{
        color:black;
        text-decoration:underline;
    }

    .alinhar{
          display: flex;
          align-items: center;
          justify-content: center;
    }

    .alinhar2 {
        display:inline-block;
        align-items: center;
        justify-content: center;
    }


</style>
