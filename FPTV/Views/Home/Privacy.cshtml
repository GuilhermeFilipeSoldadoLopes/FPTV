<body class="bodytemp">
	
		<div class="central">
		
			<h1>@ViewData["Title"]</h1>
			<div class="container">
				<img src="~/images/logo1.jpg" style="width:20%;">
			</div>
			<header>
				<nav>
					<ul>
						<li><a href="#introduction">Introduction</a></li>
						<li><a href="#information-collected">Information Collected</a></li>
