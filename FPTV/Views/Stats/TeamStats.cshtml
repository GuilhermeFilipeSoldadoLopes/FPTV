@{
    ViewData["Title"] = "TeamStats";
}
<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 2px solid black;
        padding: 8px;
        text-align: left;
    }

    .logo {
        max-width: 100%;
        height: auto;
    }

    .logo2 {
        max-width: 100%;
        height: auto;
        margin: auto;
        padding: 20px;
    }

    .h3 {
        padding-left: 20px;
        text-align: center;
    }
</style>
<body class="bodytemp" style="align-content:center; justify-content:center">

    <div style="display: flex; flex-direction: column; text-align:center">

        <div style="padding:3%; width:50%;margin:auto" class=" darkcolor bordercolor">
            <div style="display: flex ; justify-content:center; padding:3%; width:100%;margin:auto">
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo" style="width:20%;">
                <h1 style="margin-top: 20px; text-align:center; margin-left:2%">We Are Us Gaming</h1>
            </div>
            <div style="display: flex ; justify-content:right; padding:3%; width:100%;margin:auto">
                <h4>Jun, 2008</h4>
                <img src="~/images/Flags/1x1/pt.svg" style="width:5%;margin-left:1%;margin-bottom:1%">
            </div>
        </div>

        <div class="center darkcolor bordercolor" style="margin-top:3%">

            <div style="align-items: center">
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">Rui Plínio</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">Miguel Rebelo</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">João Afonso</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">Gui Lopes</h3>
            </div>
            <div>
                <img src="~/images/WRU_Logo_Fundo_.png" alt="logo" class="logo2">
                <h3 class="h3">os outros</h3>
            </div>
        </div>

        <div class="darkcolor bordercolor" style="padding: 3%; margin-top:3%">
            <table class="tablecolors">

                <tr>
                    <td>Couch</td>
                    <td>Peter</td>

                </tr>
                <tr>
                    <td>World Ranking</td>
                    <td>
                        <span> #12</span>
                        <span>

                            <img src="~/images/green.png" style="width:4%;padding:5px;">

                        </span>
                    </td>

                </tr>
                <tr>
                    <td>Total Wins</td>
                    <td>231</td>

                </tr>
                <tr>
                    <td>Total Loses</td>
                    <td>60</td>

                </tr>
                <tr>
                    <td>Maps Played</td>
                    <td>102</td>

                </tr>
            </table>
        </div>
    </div>
</body>

