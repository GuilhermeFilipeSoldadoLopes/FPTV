@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<style>

    .bodytemp {
        text-align: left;
    }

    .container {
        display: flex;
        align-items: center;
        height: 100%;
    }

    .box {
        width: 100%
    }

    .row {
        width: 100%;
        justify-content: center;
    }
</style>
<body class="bodytemp">
    <div style="background-color:white">
        <div class="container" style="text-align:center;">
            <div class="box" style="padding:5%">
                <img src="~/images/forgot_password.png" style="width:100%">
            </div>

            <div class="box">
                <div class="row">
                    <h1>@ViewData["Title"]</h1>
                    <p>
                        <b>Please check your email to reset your password.</b>
                        <br><br>
                        After resetting your password, <a asp-page="./Login">click here to login</a>.
                    </p>
                </div>
            </div>
        </div>

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>
