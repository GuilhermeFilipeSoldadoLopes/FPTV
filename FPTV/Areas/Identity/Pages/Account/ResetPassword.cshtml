@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<style>
    
    .bodytemp{
        text-align:center;
    }

    .container1 {
        display: flex;
        align-items: center;
        height: 100%;
    }

    .box {
        width: 100%
       
    }
    .row{
        width:100%;
        justify-content: center;
    }

</style>
<body class="bodytemp">
    <div class="darktheme bordercolor whitetext">

        <div class="container1"  style=" margin:auto;">

        <div class="box">
            <img src="~/images/ResetPassword.png"  style="width:90%; padding:5%;margin-bottom:10%">
        </div>

        <div class="box">
            <div class="row">
                <h1 style="text-transform: capitalize;" id="toTranslate">@ViewData["Title"]</h1>
                <h2 style="margin-bottom: 10%" id="toTranslate">Enter your email.</h2>
                <div class="col-md-4" style="width:70%; ">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                            <br />
                            <span asp-validation-for="Input.Email" class="text-danger" id="toTranslate"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <br />
                            <span asp-validation-for="Input.Password" class="text-danger" id="toTranslate"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <br />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger" id="toTranslate"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary" style="text-transform: capitalize;" id="toTranslate">Reset</button>
                </form>
                </div>
            </div>
         </div>

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</div>
</body>