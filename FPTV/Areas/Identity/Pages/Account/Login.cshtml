@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bodyLogin whiteText">
    <div class="text-center ">
        <h1 class="display" style="font-weight: bold;">Login</h1>
        @*<h1 class="display" style="font-weight: bold; background-color: white; margin: auto; width: 100px; border-radius: 10px;">Login</h1>*@
    </div>
    <div class="text-center " style="width: 90%;margin:auto">
        <section>
            <form class="form" id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" id="toTranslate"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    @*<label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>*@
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    @*<label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>*@
                </div>
                <div>
                    <div class="checkbox">
                        <br>
                        <label asp-for="Input.RememberMe" class="form-label" style="font-weight: bold;">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <span style="text-transform: capitalize;" id="toTranslate">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                        </label>
                    </div>
                </div>
                <div>
					<button id="login-submit" type="submit" class="button"><span>Login</span></button>
                </div>
            </form>
        </section>
    </div>
    <div class="text-center " style="width: 40%; display : flex ;justify-content: center; margin:auto; margin-top: 12px">
        <div class="text-center-left" style="margin-right: 25px;" >
            <p style="font-weight: bold; margin-bottom:5px" id="toTranslate"> Don't have an account?</p>
            <p><a href="Register"> <span id="toTranslate">Register now!</span></a></p>
        </div>
        <div class="text-center-right" style="margin-left: 25px;">
            <p style="font-weight: bold; margin-bottom:5px" id="toTranslate"> Forgot your Passowrd?</p>
            <p><a href="ForgotPassword"> <span id="toTranslate" style="text-transform: capitalize;">Recover</span></a></p>
    </div>
    </div>

    <div class="text-center " style="width: 90%;margin:auto">
        <section>
            <hr />
            <h3 id="toTranslate">Use another service to log in.</h3>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p id="toTranslate">
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="button" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
