@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-3">
            <h1>CS:GO</h1>
        </div>
        <div class="col-md-6">
            @if (Model.Input.ProfilePicture != null)
            {
                <img id="profilePicture" style="width:284px;height:284px;display:block;margin-left:auto;margin-right:auto; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
            }
            else
            {
                <img id="profilePicture" style="width:284px;height:284px;display:block;margin-left:auto;margin-right:auto; object-fit:cover" src="">
            }
            <br />
            <br />
            <input asp-for="Input.Username" class="form-control" disabled />
            <br />
            <input asp-for="Input.Bio" class="form-control" disabled />
            <br />
            <label>
                Topics:
                sss
            </label>


            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @if (Model.Input.ProfilePicture != null)
                {
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                }
                else
                {
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                }
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="Input.ProfilePicture"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control" disabled />
                <label asp-for="Input.Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <select asp-for="Input.Country" class="form-control" style="margin-top: 10px;">
                <option>Country</option>
                <option value="PT">Portugal</option>
                <option value="UK">United Kingdom</option>
                <label asp-for="Input.Country" class="label"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </select>
            <button id="update-profile-button" type="submit" class="button">Save</button>
        </div>
        <div class="col-md-3">
            <h1>CS:GO</h1>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}