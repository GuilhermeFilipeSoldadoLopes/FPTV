@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<style>
    
    .bodytemp{
        text-align:center;
    }

    .container {
        display: flex;
        align-items: center;
       
        height: 100%;
    }

    .box {
        width: 100%
       
    }
    .row{
        width:100%;
        justify-content: center;
    }
</style>
<body class="bodytemp">
    <div class="darktheme bordercolor whitetext" style="text-align:center">


        <div class="container1" style="text-align:center;margin:auto">

            <div class="box" style="text-align:center;">
                <img src="~/images/successPWReset.png" style="width:80%; padding:5%;margin-bottom:5%">
            </div>

        <div class="box">
            <div class="row">
                <h1>@ViewData["Title"]</h1>
                    <p>
                        Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
                    </p>
            </div>

    </div>

</div>
</body>
