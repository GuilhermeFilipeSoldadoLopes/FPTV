@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<style>
    
    .bodytemp{
        text-align:left;
    }

    .container {
        display: flex;
        align-items: center;
       
        height: 100%;
    }

    .box {
        width: 100%
       
    }
    .row{
        width:100%;
        justify-content: center;
    }
</style>
<body class="bodytemp">
    <div class="darktheme bordercolor whitetext">
    

    <div class="container" style="text-align:center;">

        <div class="box">
            <img src="~/images/RP.jpg"  style="width:100%">
        </div>

        <div class="box">
            <div class="row">
                <h1>@ViewData["Title"]</h1>
                <h2 style="margin-bottom: 10%">Enter your email.</h2>
                <div class="col-md-4" style="width:70%; ">
                    <form method="post" style="width: 100%">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating" >
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="background-color: #e0eeff" placeholder="Email"/>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                    </form>
                </div>
            </div>
         </div>

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</div>
</body>