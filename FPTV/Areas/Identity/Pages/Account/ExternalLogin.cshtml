@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<style>

    .bodytemp {
        text-align: left;
    }

    .container {
        display: flex;
        align-items: center;
        height: 100%;
    }

    .box {
        width: 100%
    }

    .row {
        width: 100%;
        justify-content: center;
    }
</style>

    <body class="bodytemp">
        <div class="darktheme bordercolor whitetext">
           

            <div class="container" style="text-align:center;">
            @if (@Model.ProviderDisplayName.Equals("Google"))
                {
                    <div class="box">
                    <img src="~/images/googleIcon.png" style="width:80%;padding:30px">
                    </div>
                }
             else
             {
                <div class="box">
                    <img src="~/images/steamIcon.png" style="width:80%;padding:30px">
                </div>
             }
            

                <div class="box">
                    <div class="row">
                        <h1>@ViewData["Title"]</h1>
                    <h2 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h2>
                        <hr />
                        <p id="external-login-description" class="text-info">
                            You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                            Please enter an email address for this site below and click the Register button to finish
                            logging in.
                        </p>
                        <div class="col-md-4" style="width:70%; ">
                        <form style="width: 100%" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating">
                                <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" style="background-color: #e0eeff" placeholder="Username" />
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>
                                <p> </p>
                                <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                <div class="form-floating" style="visibility: hidden;">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }

        </div>
    </body>

