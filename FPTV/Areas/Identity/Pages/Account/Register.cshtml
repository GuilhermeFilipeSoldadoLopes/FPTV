@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bodyLogin whiteText">
    <div class="text-center">
        <h1 class="display" style="font-weight: bold; text-transform: capitalize;" id="toTranslate">Register</h1>
        @*<h1 class="display" style="font-weight: bold; background-color: white; width: 8%;  border-radius: 10px; text-align: center">Register</h1>*@

    </div>
    <div class="text-center" style="width: 90%;margin:auto">
        <form class= "form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Username" />
                @*<label asp-for="Input.Username"></label>*@
                <span asp-validation-for="Input.Username" class="text-danger"id="toTranslate"></span>
                @Html.ValidationMessage("CustomErrorUsername")
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Email" />
                @*<label asp-for="Input.Email"></label>*@
                <span asp-validation-for="Input.Email" class="text-danger" id="toTranslate"></span>
                @Html.ValidationMessage("CustomErrorEmail")
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                @*<label asp-for="Input.Password"></label>*@
                <span asp-validation-for="Input.Password" class="text-danger" id="toTranslate"></span>
                @*@Html.ValidationMessage("CustomErrorPassword")*@
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password"/>
                @*<label asp-for="Input.ConfirmPassword"></label>*@
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger" id="toTranslate"></span>
            </div>
            <br>
            <button id="registerSubmit" type="submit" class="button"><span id="toTranslate" style="text-transform: capitalize;">Register</span></button>
        </form>
    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
